<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Tes3EditX.Winui.Controls.ListTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Tes3EditX.Winui.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <ListView
            x:Name="listview"
            ItemTemplateSelector="{StaticResource WrappedFieldTemplateSelector}"
            ItemsSource="{x:Bind List, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
    </Grid>
</UserControl>
